<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean id="talkingRobot" class="com.exlibris.quoters.TalkingRobotImpl">
        <property name="quoters">
            <list>
                <ref bean="shakespearQuoter"/>
                <ref bean="terminatorQuoter"/>
            </list>
        </property>
    </bean>
    <bean id="shakespearQuoter" class="com.exlibris.quoters.ShakespearQuoter">
        <property name="message" value="2 B || ! 2 B"/>
    </bean>
    <bean id="terminatorQuoter" class="com.exlibris.quoters.TerminatorQuoter">
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <value>Astalavista baby</value>
            </list>
        </property>
    </bean>
</beans>